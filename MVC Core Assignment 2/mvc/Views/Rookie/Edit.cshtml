@model Services.MemberUpdateModel
@{
    var value = ViewData["Index"]?.ToString() ?? "";
    var index = !string.IsNullOrEmpty(value) ? int.Parse(value) : 0;
}

<h1 class="display=4 text-center">Update Member Info</h1>
<div class="row">
    <form asp-controller="Rookie" asp-action="Update" asp-route-index="@index" method="post" class="col-12 offset-2">
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" type="text" class="form-control" placeholder="Your First Name">
            <span asp-validation-for="FirstName" class="form-text text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" type="text" class="form-control" placeholder="Your Last Name">
            <span asp-validation-for="LastName" class="form-text text-danger"></span>
        </div>
       

        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Your Phone Number">
            <span asp-validation-for="PhoneNumber" class="form-text text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BirthPlace"></label>
            <input asp-for="BirthPlace" type="text" class="form-control" placeholder="Your BirthPlace">
            <span asp-validation-for="BirthPlace" class="form-text text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
